<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Krypto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/MaterialTextButtonStyle</item>
        <item name="textInputStyle">@style/myTextInputLayout</item>
        <item name="hintTextAppearance">@style/MyHintStyle</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/primary_button_states</item>
        <item name="android:textColor">@color/primary_color_states</item>
    </style>
</resources>